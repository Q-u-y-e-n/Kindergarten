@{
    ViewData["Title"] = "Liên hệ";
}

<div class="container mt-5 mb-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">Liên hệ với chúng tôi</h1>
        <p class="lead text-muted">Hãy để lại lời nhắn hoặc ghé thăm chúng tôi – chúng tôi luôn sẵn sàng đồng hành cùng
            bạn.</p>
        <hr class="w-50 mx-auto">
    </div>

    <div class="row">
        <!-- Cột thông tin liên hệ -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-4">
                    <h3 class="text-secondary mb-4"><i class="fas fa-address-card me-2 text-primary"></i>Thông tin liên
                        hệ</h3>

                    <p class="mb-3">
                        <i class="fas fa-map-marker-alt text-primary me-2"></i>
                        <strong>Địa chỉ:</strong> 123 Đường Hoa Mai, Quận Phú Nhuận, TP. Hồ Chí Minh
                    </p>
                    <p class="mb-3">
                        <i class="fas fa-phone text-primary me-2"></i>
                        <strong>Điện thoại:</strong> (028) 1234 5678
                    </p>
                    <p class="mb-3">
                        <i class="fas fa-envelope text-primary me-2"></i>
                        <strong>Email:</strong> info@kindergaerten.edu.vn
                    </p>
                    <p class="mb-3">
                        <i class="fas fa-clock text-primary me-2"></i>
                        <strong>Giờ làm việc:</strong> Thứ 2 - Thứ 6: 7:00 - 17:00
                    </p>

                    <div class="mt-4">
                        <a href="mailto:info@kindergaerten.edu.vn" class="btn btn-primary rounded-pill px-4 me-2">
                            <i class="fas fa-paper-plane me-2"></i>Gửi Email
                        </a>
                        <a href="tel:02812345678" class="btn btn-outline-primary rounded-pill px-4">
                            <i class="fas fa-phone-alt me-2"></i>Gọi ngay
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Cột bản đồ -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
                <div class="card-body p-0">
                    <iframe src="https://www.google.com/maps?q=10.801826,106.677925&z=15&output=embed" width="100%"
                        height="400" style="border:0;" allowfullscreen="" loading="lazy">
                    </iframe>
                </div>
            </div>
        </div>
    </div>
</div>