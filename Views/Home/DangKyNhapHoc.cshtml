@{
    ViewData["Title"] = "Đăng ký tư vấn nhập học";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">

            <div class="text-center">
                <h1 class="display-4">Đăng ký tư vấn</h1>
                <p class="lead">Vui lòng để lại thông tin, bộ phận tuyển sinh sẽ liên hệ với bạn sớm nhất.</p>
            </div>

            <form asp-action="DangKyNhapHoc" method="post" class="mt-4">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label class="form-label">Họ tên Phụ huynh</label>
                    <input name="HoTenPH" class="form-control" placeholder="Nguyễn Văn A" required>
                </div>

                <div class="mb-3">
                    <label class="form-label">Số điện thoại</label>
                    <input name="SoDienThoai" type="tel" class="form-control" placeholder="0909123456" required>
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input name="Email" type="email" class="form-control" placeholder="vidu@gmail.com" required>
                </div>

                <div class="mb-3">
                    <label class="form-label">Tên của bé</label>
                    <input name="HoTenBe" class="form-control" placeholder="Nguyễn Văn B">
                </div>

                <div class="mb-3">
                    <label class="form-label">Ngày sinh của bé</label>
                    <input name="NgaySinhBe" type="date" class="form-control">
                </div>

                <div class="mb-3">
                    <label class="form-label">Ghi chú (nếu có)</label>
                    <textarea name="GhiChu" class="form-control" rows="3"></textarea>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg px-5">Gửi thông tin</button>
                </div>
            </form>
        </div>
    </div>
</div>