@model kindergarten.Models.LopHoc

@{
    ViewData["Title"] = "Thêm lớp học";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h3 class="text-success"><i class="bi bi-plus-circle"></i> Thêm lớp học</h3>

    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="TenLop" class="form-label"></label>
            <input asp-for="TenLop" class="form-control" placeholder="Nhập tên lớp..." />
            <span asp-validation-for="TenLop" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="NamHoc" class="form-label"></label>
            <input asp-for="NamHoc" class="form-control" placeholder="Ví dụ: 2024-2025" />
        </div>

        <div class="mb-3">
            <label asp-for="SiSoToiDa" class="form-label"></label>
            <input asp-for="SiSoToiDa" class="form-control" type="number" min="1" max="50"
                placeholder="Nhập sĩ số tối đa" />
        </div>

        <div class="mb-3">
            <label class="form-label">Giáo viên chủ nhiệm</label>
            <select asp-for="MaGVCN" class="form-select" asp-items="ViewBag.DSGiaoVien">
                <option value="">-- Chọn giáo viên --</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="GhiChu" class="form-label"></label>
            <textarea asp-for="GhiChu" class="form-control" placeholder="Ghi chú thêm (nếu có)"></textarea>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Lưu
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    </form>
</div>

<!-- Validation scripts được nhúng trực tiếp, không cần section -->
<partial name="_ValidationScriptsPartial" />