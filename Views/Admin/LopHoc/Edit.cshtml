@model kindergarten.Models.LopHoc

@{
    ViewData["Title"] = "Chỉnh sửa lớp học";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h3 class="text-info">Chỉnh sửa lớp học</h3>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="MaLop" />

        <div class="mb-3">
            <label asp-for="TenLop" class="form-label"></label>
            <input asp-for="TenLop" class="form-control" />
            <span asp-validation-for="TenLop" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="NamHoc" class="form-label"></label>
            <input asp-for="NamHoc" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="SiSoToiDa" class="form-label"></label>
            <input asp-for="SiSoToiDa" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Giáo viên chủ nhiệm</label>
            <select asp-for="MaGVCN" class="form-select" asp-items="ViewBag.DSGiaoVien">
                <option value="">-- Chọn giáo viên --</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="GhiChu" class="form-label"></label>
            <textarea asp-for="GhiChu" class="form-control"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>