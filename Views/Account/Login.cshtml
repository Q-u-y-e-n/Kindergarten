@model kindergarten.Models.LoginViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow border-0 rounded-3">
                <div class="card-body p-4 p-sm-5">
                    <h2 class="card-title text-center mb-4 fw-bold fs-3 text-primary">Đăng nhập hệ thống</h2>

                    @* Hiển thị lỗi chung từ controller *@
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger" role="alert">@ViewBag.Error</div>
                    }
                    @* Hiển thị thông báo thành công sau khi đăng ký *@
                    @if (ViewBag.SuccessMessage != null)
                    {
                        <div class="alert alert-success" role="alert">@ViewBag.SuccessMessage</div>
                    }

                    <div asp-validation-summary="All" class="text-danger mb-3"></div>
                    @* ModelOnly *@

                    <form asp-action="Login" method="post">

                        @Html.AntiForgeryToken()
                        <div class="form-floating mb-3">
                            <input asp-for="TenDangNhap" class="form-control" placeholder="Tên đăng nhập" />
                            <label asp-for="TenDangNhap">Tên đăng nhập</label>
                            <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="MatKhau" type="password" class="form-control" placeholder="Mật khẩu" />
                            <label asp-for="MatKhau">Mật khẩu</label>
                            <span asp-validation-for="MatKhau" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label">Ghi nhớ đăng nhập</label>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg fw-bold">Đăng nhập</button>
                        </div>
                    </form>

                    <div class="mt-4 text-center">
                        <small>Chưa có tài khoản? <a asp-action="Register" asp-controller="Account">Đăng ký
                                ngay</a></small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}